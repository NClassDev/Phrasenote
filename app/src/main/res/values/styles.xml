<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_style" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">@dimen/box_title_margin_start</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="box_title_style" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/box_title_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">@dimen/box_title_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/box_title_margin_start</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="box_form_style" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/box_form_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">254dp</item>
        <item name="android:layout_marginBottom">@dimen/box_form_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/box_form_margin_start</item>
    </style>

</resources>